{
    "id": "zsh-setup",
    "version": "1.0.0",
    "name": "Custom Zsh with Oh My Zsh",
    "description": "Installs Zsh with Oh My Zsh, custom plugins, and themes.",
    "options": {
        "configureZshAsDefaultShell": {
            "type": "boolean",
            "default": true,
            "description": "Set Zsh as the default shell"
        },
        "installOhMyZsh": {
            "type": "boolean",
            "default": true,
            "description": "Install Oh My Zsh"
        },
        "installOhMyZshConfig": {
            "type": "boolean",
            "default": false,
            "description": "Install default Oh My Zsh configuration"
        },
        "plugins": {
            "type": "array",
            "items": {
                "type": "string",
                "description": "Plugin name or 'name:repo' format"
            },
            "default": [
                "git",
                "z",
                "node",
                "nvm",
                "colorize",
                "history-substring-search:https://github.com/zsh-users/zsh-history-substring-search.git",
                "zsh-autosuggestions:https://github.com/zsh-users/zsh-autosuggestions",
                "zsh-syntax-highlighting:https://github.com/zsh-users/zsh-syntax-highlighting.git",
                "zsh-completions:https://github.com/zsh-users/zsh-completions.git",
                "you-should-use:https://github.com/MichaelAquilina/zsh-you-should-use",
                "zsh-better-npm-completion:https://github.com/lukechilds/zsh-better-npm-completion"
            ],
            "description": "List of plugins to install and enable."
        },
        "themes": {
            "type": "array",
            "items": {
                "type": "string",
                "description": "Theme name or 'name:repo' format"
            },
            "default": [
                "powerlevel10k:https://github.com/romkatv/powerlevel10k"
            ],
            "description": "List of themes to install."
        },
        "defaultTheme": {
            "type": "string",
            "default": "powerlevel10k/powerlevel10k",
            "description": "Default theme to use"
        }
    },
    "dependsOn": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": "${configureZshAsDefaultShell}",
            "installOhMyZsh": "${installOhMyZsh}",
            "installOhMyZshConfig": "${installOhMyZshConfig}",
            "userUid": "1001",
            "username": "automatic",
            "userGid": "automatic"
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ]
}
