<%- contentFor('main') %>

<div class="error-container">
    <% if (status) { %>
    <h1>Erreur <%= status %></h1>
    <% } else { %>
    <h1>Erreur</h1>
    <% } %>
    <% if (message) { %>
    <p><%= message %></p>
    <% } %>
    <!-- Si le stack n'est pas vide on l'affiche -->
    <% if (stack && stack.length) { %>
    <pre><%= stack %></pre>
    <% } %>
</div>